@{
    ViewBag.Title = "Form";
}

<h2>Novo Produto</h2>

<form action="@Url.Action("Adiciona", "Produtos")" method="post">
    <label>
        Nome:
        <input type="text" name="produto.Nome" />
    </label>
    <label>
        Descricao:
        <textarea name="produto.Descricao"></textarea>
    </label>
    <label>
        Preco:
        <input type="text" name="produto.Preco" />
    </label>
    @*<label>
        Categoria:
        <input type="text" name="produto.CategoriaID" />
    </label>*@

    <input type="submit" value="Adicionar"/>
</form>