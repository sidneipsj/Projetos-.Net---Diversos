@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@section scripts {

    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />

    <style type="text/css">
        body
        {
            margin: 20px;
            font-family: "Arial", "Helventica", sans-serif;
        }

        label
        {
            width: 80px;
            display: inline-block;
        }

        button
        {
            display: inline-block;
            outline: none;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
            padding: .4em 1.1em .4em;
            color: #fef4e9;
            border: solid 1px #006fb9;
            background: #1276bb;
        }

        button:hover
        {
            text-decoration: none;
            background: #282828;
            border: solid 1px #000;
        }

        table
        {
            padding-top: 1em;
        }

        thead, tfoot
        {
            font-weight: 600;
        }

        th, td
        {
            padding: .1em .5em;
            text-align: left;
        }

        td li, td ul
        {
            margin: 0;
            padding: 0;
        }

        td li
        {
            display: inline;
        }

        td li::after
        {
            content: ',';
        }

        td li:last-child::after
        {
            content: '';
        }
    </style>

    
    <script src="~/Scripts/knockout-2.2.0.js"></script>
    <script src="@Url.Content("~/Scripts/knockout-2.2.0.debug.js")" type="text/javascript"></script>
    <script src="~/Scripts/jquery-ui-1.8.24.js"></script>
    
    <script type="text/javascript">
        

        function formatCurrency(value) {
            return "$" + value.toFixed(2);
        }

        function ProdutoViewModel() {

            //Make the self as 'this' reference
            var self = this;

            //Declare observable which will be bind with UI 
            self.Id = ko.observable("");
            self.Nome = ko.observable("");
            self.Preco = ko.observable("");
            self.Categoria = ko.observable("");

            // Product
            var produto = {
                Id: self.Id,
                Nome: self.Nome,
                Preco: self.Preco,
                Categoria: self.Categoria
            };

            self.Produto = ko.observable();
            self.Produtos = ko.observableArray(); // Contains the list of products

            // Initialize the view-model
            $.ajax({
                url: '@Url.Action("GetAllProdutos", "Produto")',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                data: {},
                success: function (data) {
                    self.Produtos(data);
                }
            });

            // Calculate Total of Price After Initialization
            self.Total = ko.computed(function () {
                var sum = 0;
                var arr = self.Products();
                for (var i = 0; i < arr.length; i++) {
                    sum += arr[i].Price;
                }
                return sum;
            });

            //Add New Item
            self.create = function () {
                if (produto.Nome() != "" && produto.Preco() != "" && produto.Categoria() != "") {
                    $.ajax({
                        url: '@Url.Action("AddProduto", "Produto")',
                        cache: false,
                        type: 'POST',
                        contentType: 'application/json; charset=utf-8',
                        data: ko.toJSON(produto),
                        success: function (data) {
                            self.Produtos.push(data);
                            self.Nome("");
                            self.Preco("");
                            self.Categoria("");

                            $('#Add').dialog("close");
                        }
                    }).fail(function (xhr, textStatus, err) {
                        alert(err);
                    });

                } else {
                    alert('Insira os valores !!');
                }

            };

            // Delete product details
            self.delete = function (Product) {
                if (confirm('Tem certeza product ??')) {
                    var id = Product.Id;

                    $.ajax({
                        url: '@Url.Action("AddProduto", "Produto")',
                        cache: false,
                        type: 'POST',
                        contentType: 'application/json; charset=utf-8',
                        data: ko.toJSON(id),
                        success: function (data) {
                            self.Products.remove(Product);

                        }
                    }).fail(function (xhr, textStatus, err) {
                        self.status(err);
                    });
                    }
            };

            // Edit product details
                self.edit = function (Product) {
                    $('#Update').dialog();
                    self.Product(Product);

                };

            // Update product details
                self.update = function () {
                    var Produto = self.Produto();
                    $.ajax({
                        url: '@Url.Action("EditProduto", "Produto")',
                    cache: false,
                    type: 'PUT',
                    contentType: 'application/json; charset=utf-8',
                    data: ko.toJSON(Produto),
                    success: function (data) {
                        self.Produtos.removeAll();
                        self.Produtos(data); //Put the response in ObservableArray
                        self.Produto(null);
                        alert("Registro atualizado");
                        $('#Update').dialog("close");
                    }
                }).fail(function (xhr, textStatus, err) {
                    alert(err);
                });
            };

            // Reset product details
            self.reset = function () {
                self.Nome("");
                self.Preco("");
                self.Categoria("");
                $('#Add').dialog("close");
                $('#Update').dialog("close");
            };

            // Cancel product details
            self.cancel = function () {
